
@{
    ViewBag.Title = "Từ điển";
}

<section class="input-section">
    <div class="form-container container">
        <form action="" onsubmit="event.preventDefault();">
            <ul class="input-list d-flex">
                <li class="input-item mx-2">
                    <label for="tiengAnhTxt" class="input-label">Tiếng Anh:</label>
                    <input type="text"
                           name="TiengAnh"
                           id="tiengAnhTxt"
                           placeholder="Nhập từ cần tra"
                           class="px-2 py-1" />
                </li>
                <li class="input-item mx-2">
                    <button class="btn btn-primary" id="btn-search">Dịch</button>
                </li>
            </ul>
        </form>
    </div>
</section>
<section class="output-section">
    <div class="container output-container">
        <h4>Kết quả:</h4>
        <ul class="output-list">    
        </ul>
    </div>
</section>

